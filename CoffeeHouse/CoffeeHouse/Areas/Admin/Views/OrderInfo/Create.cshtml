@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model OrderInfo
<div class="ms-2 mx-2">
    <h1 style="margin-top: 50px; text-align: center">Create</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-controller="OrderInfo" asp-action="Create" method="post" class="mt-3" style="width: 60%;
        margin: 0 auto; padding-top: 30px">
        <div style="margin-top:10px" class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Id" class="form-control" placeholder="Id">
            </div>
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div style="margin-top:10px" class="form-group row">
            <label asp-for="IdOrders" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="IdOrders" class="form-control" placeholder="Id Orders">
            </div>
            <span asp-validation-for="IdOrders" class="text-danger"></span>
        </div>
        <div style="margin-top:10px" class="form-group row">
            <label asp-for="IdProduct" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="IdProduct" class="form-control" placeholder="Id Product">
            </div>
            <span asp-validation-for="IdProduct" class="text-danger"></span>
        </div>
        <div style="margin-top:10px" class="form-group row">
            <label asp-for="Number" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Number" class="form-control" placeholder="Number">
            </div>
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>
        <div style="margin-top:10px" class="form-group row">
            <label asp-for="Reduce" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Reduce" class="form-control" placeholder="Reduce">
            </div>
            <span asp-validation-for="Reduce" class="text-danger"></span>
        </div>
        <div style="margin-top:10px" class="form-group row">
            <div class="col-sm-10" style="padding: 20px 0">
                <button type="submit" class="btn btn-primary" style="padding: 10px 40px">Create</button>
            </div>
        </div>
    </form>
</div> 