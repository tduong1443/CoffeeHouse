@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model Staff
<div class="ms-2 mx-2">
    <h1 style="margin-top: 50px; text-align: center">Edit</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-controller="Staff" asp-action="Edit" asp-route-id="@Model.IdStaff" method="post" class="mt-3" style="width: 60%;
        margin: 0 auto; padding-top: 30px">
        <input type="hidden" asp-for="IdStaff" />
        <div style="margin-top:10px" class="form-group row">
            <label asp-for="IdStaff" class="col-sm-2 col-form-label"></label> <div class="col-sm-10">
                <input asp-for="IdStaff" class="form-control" placeholder="Id">
            </div>
            <span asp-validation-for="IdStaff" class="text-danger"></span>
        </div>
        <div style="margin-top:10px" class="form-group row">
            <label asp-for="FullName" class="col-sm-2 col-form-label"></label> <div class="col-sm-10">
                <input asp-for="FullName" class="form-control" placeholder="Name">
            </div>
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div style="margin-top:10px" class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" placeholder="Email">
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div style="margin-top:10px" class="form-group row">
            <label asp-for="Birthday" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Birthday" class="form-control" placeholder="Birthday">
            </div>
            <span asp-validation-for="Birthday" class="text-danger"></span>
        </div>
        <div style="margin-top:10px" class="form-group row">
            <label asp-for="Address" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Address" class="form-control" placeholder="Address">
            </div>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div style="margin-top:10px" class="form-group row">
            <label asp-for="Phone" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Phone" class="form-control" placeholder="Phone">
            </div>
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div style="margin-top:10px" class="form-group row">
            <div class="col-sm-10" style="padding: 20px 0">
                <button type="submit" class="btn btn-primary" style="padding: 10px 40px">Edit</button>
            </div>
        </div>

    </form>
</div> 
