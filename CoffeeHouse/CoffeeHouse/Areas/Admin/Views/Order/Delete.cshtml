@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model Orders
<div class="ms-2 mx-2">
    <h1>Delete</h1>
    <h3>Are you sure you want to delete this?</h3>
    <h4>Orders</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model. IdOrders)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model. IdOrders)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdCustomer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model. IdCustomer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdStaff)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model. IdStaff)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model. OrderDate)
        </dd>
