@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Staff>
<div id="content">
    <h3 style="margin-top: 50px; text-align: center; padding-bottom: 50px">Category List</h3>
    <table class="table table-striped" style="margin: 0 auto; width: 80%">
        <thead style="background-color: black; color: white">
            <tr>
                <th>ID</th>
                <th>Fullname</th>
                <th>Email</th>
                <th>Birthđay</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Position</th>
                <th>Function</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.IdStaff</td>
                    <td>@s.FullName</td>
                    <td>@s.Email</td>
                    <td>@s.Birthday</td>
                    <td>@s.Address</td>
                    <td>@s.Phone</td>
                    <td>@s.Position</td>
                    <td>
                        <a style="background-color: green; text-decoration: none; color: white; padding: 5px 10px" asp-action="Edit" asp-route-id="@s.IdStaff">Edit</a>
                        <a style="background-color: red; text-decoration: none; color: white; padding: 5px 10px" asp-action="Delete" asp-route-id="@s.IdStaff">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Create" class="btn btn-primary" style="margin-top: 20px; padding: 10px; margin-left: 250px">Create New Category</a>
</div>